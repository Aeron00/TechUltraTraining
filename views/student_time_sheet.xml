<?xml version="1.0"?>
<odoo>
    <data>
        <record id="student_timesheet_tree" model="ir.ui.view">
            <field name="name">time.sheet.tree</field>
            <field name="model">time.sheet</field>
            <field name="arch" type="xml">
                <tree string="Student Timesheet">
                    <field name="stud_id"/>
                    <field name="class_name"/>
                    <field name="check_in"/>
                    <field name="check_out"/>
                    <field name="time_spend" widget="float_time"/>
                </tree>
            </field>
        </record>

        <record id="student_timesheet_form" model="ir.ui.view">
            <field name="name">time.sheet.form</field>
            <field name="model">time.sheet</field>
            <field name="arch" type="xml">
                <form string="Add Time">
                    <sheet>
                        <h1>
                            <group col="4" colspan="2">
                                <field name="stud_id" required="1" placeholder="Name"/>
                                <field name="class_name"/>
                            </group>
                        </h1>
                        <notebook colspan="4">
                            <page name="entry_exit" string="Entry and Exit">
                                <group col="6" colspan="2"
                                       name="school">
                                    <field name="check_in"/>
                                    <field name="check_out"/>
                                    <field name="time_spend"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="Add_timesheet">
            <field name="name">Time Sheet</field>
            <field name="res_model">time.sheet</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="school_time_sheet_menu" name="Time Sheet" parent="school_menu" action="Add_timesheet"/>

    </data>
</odoo>
